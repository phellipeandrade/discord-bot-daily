{
  "name": "discord-bot-daily",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage && jest-coverage-badges",
    "clean": "rm -rf dist build bot.zip",
    "copy-assets": "mkdir -p build && cp src/users.original.json build/users.json && cp -r src/i18n build/ && cp src/serverConfig.sample.json build/serverConfig.json",
    "compile": "tsc",
    "bundle": "esbuild dist/index.js --bundle --platform=node --outfile=build/index.js",
    "build": "npm run copy-assets && npm run compile && npm run bundle",
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "generate-zip": "rm -f bot.zip && cd build && zip -r ../bot.zip index.js users.json serverConfig.json i18n/ && zip -j ../bot.zip ../package.json ../.env",
    "build-zip": "npm run clean && npm run build && npm run generate-zip",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "i18next": "^25.2.1",
    "@rbac/rbac": "^2.1.0",
    "node-cron": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.58",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "mock-fs": "^5.5.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "jest-coverage-badges": "^1.1.2"
  }
}
