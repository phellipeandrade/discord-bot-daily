{
  "name": "discord-bot-daily",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage && jest-coverage-badges",
    "clean": "rm -rf dist build bot.zip",
    "copy-assets": "mkdir -p build && if [ -f src/users.json ]; then cp src/users.json build/users.json; else cp src/users.sample.json build/users.json; fi && cp -r src/i18n build/ && if [ -f src/serverConfig.json ]; then cp src/serverConfig.json build/serverConfig.json; else cp src/serverConfig.sample.json build/serverConfig.json; fi && cp node_modules/jsdom/lib/jsdom/living/xhr/xhr-sync-worker.js build/",
    "compile": "tsc",
"bundle": "esbuild dist/index.js --bundle --platform=node --outfile=build/index.js --external:play-opus --external:opusscript --external:unfetch --external:mediaplex-linux-* --external:./xhr-sync-worker.js",
    "build": "npm run copy-assets && npm run compile && npm run bundle",
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "generate-zip": "rm -f bot.zip && cd build && zip -r ../bot.zip index.js xhr-sync-worker.js users.json serverConfig.json i18n/ && zip -j ../bot.zip ../package.json ../.env",
    "build-zip": "npm run clean && npm run build && npm run generate-zip",
    "lint": "eslint \"src/**/*.ts\" && tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "prepare": "husky install"
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "@discordjs/voice": "^0.16.0",
    "@rbac/rbac": "^2.1.0",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "ffmpeg-static": "^5.1.0",
    "i18next": "^25.2.1",
    "node-cron": "^4.1.0",
    "discord-player": "^7.1.0",
    "discord-player-youtubei": "^1.4.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.58",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "mock-fs": "^5.5.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@discordjs/opus": "^0.10.0",
    "opusscript": "^0.0.8"
  }
}
